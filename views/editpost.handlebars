<div>
  <div class="row" style="text-align: center;">
    <div class="col-auto">
      <h2 class="title">Dashboard For: {{user.username}}</h2>
    </div>
  </div>
  <div class="row mt-4 card" style="text-align: center;">
    <h3>Update Blog Post:</h3>
    <form class="form new-project-form">
      <div class="form-group">
        <label for="project-name">Title:</label>
        <input
          class="form-input"
          type="text"
          id="project-name"
          name="project-name"
          value="{{title}}"
        />
      </div>
      <div class="form-group">
        <label for="project-desc">Content:</label>
        <textarea
          class="form-input"
          id="project-desc"
          name="project-desc"
        >{{content}} </textarea>
      </div>
      <div class="form-group">
        <button
          type="submit"
          class="btn btn-primary new-post-btn"
        >Update</button>
      </div>
    </form>
    <button class="btn btn-primary del-post-btn">Delete</button>
  </div>
</div>

<script src="/js/editpost.js"></script>