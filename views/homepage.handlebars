<!-- Loop over each object in the projects array -->
{{#each blogs as |blog|}}
  <div class="row mb-4 project card">
    <div class="col-md-5">
      <h2 class="card header">
        <a href="/blog/{{blog.id}}">{{blog.title}}</a>
      </h2>
      <p class="card-author">Posted by
        {{blog.user.username}}
        on
        {{format_date blog.date_created}}</p>
    </div>
    <div class="col-md-7">
      <p class="card-content">
        {{blog.content}}
      </p>
    </div>
  </div>
{{/each}}