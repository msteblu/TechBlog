<div style="text-align: center;">
  <div class="row">
    <div class="col-auto">
      <h2 class="title">Dashboard For: {{username}}</h2>
    </div>
  </div>
  <div class="row mt-4">
    {{#if blogs.length}}
      <div class="col-md-12 project-list">
        {{#each blogs as |blog|}}
          <div class="row mb-4 card">
            <div class="col-md-6">
              <h4><a href="/editpost/{{blog.id}}">{{blog.title}}</a></h4>
            </div>
            <div class="col-md-3">
              <p class="date">{{format_date date_created}}</p>
            </div>
          </div>
        {{/each}}
      </div>
    {{/if}}
  </div>
  <button class="btn btn-primary new-post-btn">+ New Post</button>
</div>

<script src="/js/dashboard.js"></script>